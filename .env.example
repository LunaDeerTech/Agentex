# Agentex Environment Configuration
# This is the merged configuration for both backend and frontend
# Copy this file to .env and update values as needed

# ======================
# Application
# ======================
APP_NAME=Agentex
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# ======================
# Backend Server
# ======================
HOST=0.0.0.0
PORT=8000

# ======================
# Frontend
# ======================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=Agentex

# ======================
# Database (PostgreSQL)
# ======================
DATABASE_URL=postgresql+asyncpg://agentex:agentex123@localhost:5432/agentex
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# ======================
# Redis
# ======================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ======================
# Vector Database (Milvus)
# ======================
VECTOR_DB_TYPE=milvus
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530

# ======================
# File Storage
# ======================
STORAGE_TYPE=local
STORAGE_PATH=./storage

# ======================
# Security & JWT
# ======================
SECRET_KEY=your-secret-key-change-in-production-must-be-at-least-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# CORS
# ======================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=console
